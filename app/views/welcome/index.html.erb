
<div class="container-fluid">
<h3>
  <%= link_to 'See my BruGrams', user_photos_path(current_user) %>
</h3>

<% @photos.each do |photo| %>
	
	<% if photo.public || photo.user == current_user %>
	<div>
		<strong>BruGram posted by:</strong> <%= photo.user.email %>
	</div>

	<%= link_to image_tag(photo.image.url(:medium)), user_photo_path(current_user, photo) %>

	<div>
		<%= photo.caption %>
	</div>

	<%end%>

	<%end%>
</div>