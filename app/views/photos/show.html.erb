<div class="container-fluid">

<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">BruGram
                    <small>Your Lekker Photo</small>
                </h1>
            </div>
        </div>
<h3>BruGram posted by: <%= @photo.user.email %></h3>

<div>
  <%= image_tag @photo.image.url(:medium) %>
</div>

<div>
  <%= @photo.caption %>
</div>

<% if @photo.user == current_user %>
<div>
  <%= link_to 'Edit BruGram', edit_user_photo_path(current_user, @photo) %>
</div>

<%end%>

<div>
  <%= link_to 'Back to Feed', root_path %>
</div>

<%= render @photo.comments %>

<%= render 'comments/form' %>

</div>